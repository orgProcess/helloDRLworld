package com.samplespace.hellodrlworld;

import com.samplespace.PaymentOffers;

rule "Offer for ApplePay"
	when
		offer: PaymentOffer(channel == "ApplePay")
	then
		offer.setDiscount(15);
	end
	
	
rule "Offer for SamsungPay"
	when
		offer: PaymentOffer(channel == "SamsungPay")
	then
		offer.setDiscount(20);
	end
	
	
rule "Offer for GooglePay"
	when
		offer: PaymentOffer(channel == "GooglePay")
	then
		offer.setDiscount(25);
	end

